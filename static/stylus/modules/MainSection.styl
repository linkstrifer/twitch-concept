.MainSection-highlightContainer
	cursor pointer
	height 0
	padding-bottom 56.25%
	position relative

	img
		height 100%
		left 0
		position absolute
		top 0
		width 100%

.MainSection-highlightData
	bottom 30%
	color white
	left 0
	position absolute
	right 0
	text-align center
	text-shadow 2px 2px 10px rgba(0,0,0,1)
	top 30%

.MainSection-title
	font-size 80px
	font-weight bold
	margin auto
	max-width 70%
	text-transform uppercase

.MainSection-summary
	font-size 18px
	font-weight 100
	margin 1em auto
	max-width 50%

.MainSection-play
	font-size 18px
	
	i
		&:before
			font-size 22px
			vertical-align middle

.MainSection-prev
.MainSection-next
	bottom 0
	cursor pointer
	height 100%
	position absolute
	text-align center
	top 0
	width 10%
	
	&:hover
		background rgba(0,0,0,.3)
	
	i
		color white
		font-size 80px
		font-weight 100
		position relative
		top 50%

.MainSection-prev
	left 0

.MainSection-next
	right 0

.MainSection-listContainer
	display flex
	padding 0
	margin 0

.MainSection-listItem
	cursor pointer
	display inline-block
	background-color gray
	color purple
	padding 1em
	
	&:after
		content ''
		height 10px
		width 10px
		border-right 2px dotted purple
		border-bottom 2px dotted purple
		position absolute
		right 3px
		bottom 3px
	
	&.is-active
		background-color dark-purple
		color white
		
		&:after
			content initial
	
	&:hover
		background-color purple
		color white
		
		&:after
			border-color white

.MainSection-listGame
	display block
	color #b0b0b2
	text-transform uppercase

.MainSection-listTitle
	display block
	font-weight bold
	text-transform uppercase
